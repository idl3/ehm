<%= form_for [:admin, @offer] do |f| %>
<%= render 'admin/shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :initial_price %>
  <%= f.text_field :initial_price %>

  <%= f.label "Ξεκινά στις:" %>
  <%= date_select :offer, :starts_on %>

  <%= f.label "Λήγει στις:" %>
  <%= date_select :offer, :expires_on %>

  <%= f.label "Εικόνα" %>
  <%= f.file_field :image %>

  <%= f.label "Κατηγορία" %>
  <%= collection_select(:offer, :category_id, Category.all, :id, :title) %>

  <%= f.submit "Create" %>
<% end %>